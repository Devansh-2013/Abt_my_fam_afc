<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6FFFC"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:background="#03A9F4"
        android:scaleType="centerInside"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="131dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="181dp"
        android:background="#FFFFFF"
        android:capitalize="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="My father's name is Dr. NC Basantia. He is very sweet and fun. He can make jokes on litrelly anything.He taught me to play many games and taught me good manners as well. My father/papa is the sweetest and the most lovely papa/father in the world."
        android:textAlignment="center"
        android:textColorLink="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="313dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~Devansh"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="525dp" />
</androidx.constraintlayout.widget.ConstraintLayout>